{% extends 'base.html.twig' %}

{% block title %}Create Product{% endblock %}

{% block body %}
    <div class="row my-4">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    Create new product
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-success mt-3">Create</button>
                    {{ form_end(form) }}
                </div>
            </div>
            <a href="{{ path('admin_product_list') }}" class="btn btn-secondary mt-3">Back to list</a>
        </div>
    </div>
{% endblock %}
